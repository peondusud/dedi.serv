[Unit]
Description=CouchPotato application instance
Requires=network.target local-fs.target

[Service]
User=couchpotato
Group=couchpotato

Type=simple
ExecStartPre=-mkdir -p /home/%i/.config/couchpotato
ExecStart=/opt/couchpotato/CouchPotato.py --data_dir /home/%i/.config/couchpotato

#Type=forking
#GuessMainPID=no
#ExecStart=/opt/couchpotato/CouchPotato.py --daemon --data_dir /home/%i/.config/couchpotato

[Install]
WantedBy=multi-user.target
